@model Peak_Performance.Models.Workout

@{
    ViewBag.Title = "WorkoutCreated";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Workout for @Html.DisplayFor(model => model.Team.TeamName) on @Html.DisplayFor(model => model.WorkoutDate) Created Successfully</h2>
<button class="btn btn-primary" id="contact" onclick="contactTeam(@Html.ValueFor(model => model.TeamID)" style="padding: 5px; margin: 5px;">+ Create New Workout</button>
<div>
    <h4>Workout</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Team.TeamName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Team.TeamName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.WorkoutDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.WorkoutDate)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
    @Html.ActionLink("Back to List", "Index")
</p>


@section scripts
{
    <script src="~/Scripts/main.js"></script>
    <script src="https://cdn.plot.ly/plotly-latest.min.js"></script>
}